<header>
  <div class="mb-10 flex flex-row justify-between content-center align-center items-center">
    <h1 class="text-3xl font-bold">
      🏠 <%= link_to('ИП Ибрагимжанов', root_path, class: 'text-blue-500 font-bold hover:underline') %>
    </h1>
    <% if current_user %>
      <div class="flex flex-row justify-end content-center align-center items-center">
        <p class="font-bold mr-2"><%= current_user.name %></p>
        <%= link_to('Выйти 👉', session_path,
          data: { turbo_method: :delete },
          class: 'bold text-blue-600 bg-transparent rounded border-2 border-rounded border-blue-600 text-center px-2 py-1 hover:bg-blue-600 hover:text-white') %>
      </div>
    <% end %>
  </div>
</header>
